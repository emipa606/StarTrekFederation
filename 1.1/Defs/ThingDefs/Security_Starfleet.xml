<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>TrapPhaseMine</defName>
    <label>Starfleet phase mine</label>
    <thingClass>Building_TrapExplosive</thingClass>
    <graphicData>
      <texPath>Things/Federation/Items/phasemine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0.1,0,0.8,0.3)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <drawerType>RealtimeOnly</drawerType>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Beauty>-2</Beauty>
      <TrapSpringChance>0.7</TrapSpringChance>
    </statBases>
    <description>A federation standard phase mine, designed to protect outposts from dangerous wildlife or enemy factions.</description>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <designationCategory>Security</designationCategory>
    <designationHotKey>Misc7</designationHotKey>
    <building>
      <isTrap>true</isTrap>
    </building>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <startWickHitPointsPercent>0.2</startWickHitPointsPercent>
        <wickTicks>
          <min>15</min>
          <max>70</max>
        </wickTicks>
      </li>
    </comps>
    <researchPrerequisites>
      <li>StarfleetT3point5</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef Name="BaseStarfleetMannableTurret" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Federation/Items/PhaseCannonBase</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.38,0.2,0.56375,0.8)</rect>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <stealable>false</stealable>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToMake>2700</WorkToMake>
      <Beauty>-2</Beauty>
      <Mass>12</Mass>
    </statBases>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <building>
      <fixedStorageSettings>
        <filter>
          <thingDefs>
            <li>PhasePack</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <turretBurstCooldownTime>2.15</turretBurstCooldownTime>
      <buildingTags>
        <li>Artillery</li>
      </buildingTags>
    </building>
    <researchPrerequisites>
      <li>StarfleetT3point5</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Phase</defName>
    <label>phase pulse</label>
    <graphicData>
      <texPath>Things/Federation/Projectiles/PhaseCannonBlast</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>25</damageAmountBase>
      <speed>75</speed>
      <explosionRadius>1.2</explosionRadius>
      <flyOverhead>false</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>PhaseCannon_MannedTurret</defName>
    <label>Phase Cannon Turret</label>
    <description>Starfleet phase cannon. This is a scaled down version of the ship based phase pulse cannon. It can be manned, and fires a concentrated pulse of phased energy, resulting in a large explosion.</description>
    <weaponTags>
      <li>StarfleetPhaseTurret</li>
    </weaponTags>
    <graphicData>
      <texPath>Things/Federation/Items/PhaseCannonTop</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>5.22</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Phase</defaultProjectile>
        <forcedMissRadius>2</forcedMissRadius>
        <warmupTime>1</warmupTime>
        <burstShotCount>5</burstShotCount>
        <ticksBetweenBurstShots>120</ticksBetweenBurstShots>
        <minRange>2</minRange>
        <range>40</range>
        <soundCast>Phaser_blast6</soundCast>
        <muzzleFlashScale>50</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <ThingDef ParentName="BaseStarfleetMannableTurret">
    <defName>Turret_PhaseCannon</defName>
    <label>Phase Cannon Turret</label>
    <description>Starfleet phase cannon. This is a scaled down version of the ship based phase pulse cannon. It can be manned, and fires a concentrated pulse of phased energy, resulting in a large explosion.</description>
    <costStuffCount>100</costStuffCount>
    <costList>
      <Steel>250</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <designationHotKey>Misc3</designationHotKey>
    <building>
      <turretGunDef>PhaseCannon_MannedTurret</turretGunDef>
      <buildingTags>
        <li>Artillery</li>
      </buildingTags>
    </building>
  </ThingDef>
</Defs>