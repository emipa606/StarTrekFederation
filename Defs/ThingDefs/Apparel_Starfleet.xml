  <!-- Starfleet -->
  <ThingDef ParentName="ApparelMakeableBaseStarfleet">
    <defName>Apparel_StarfleetTactical</defName>
    <label>Starfleet Tactical Uniform</label>
    <description>Standard uniform for enlisted and officer corps of Starfleet tactical divisions. These uniforms are rated for planetary excursions, and have been weaved with ablative layers to bear the burden of light energy and kinetic weapons.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>StarfleetT1</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Federation/Uniforms/Command</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <Insulation_Cold>11</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <Mass>1.8</Mass>
    </statBases>
    <costList>
      <Cloth>60</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <layers>
        <li>OnSkin</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Federation/Uniforms/Command</wornGraphicPath>
      <tags>
        <li>StarfleetTacticalApparel</li>
      </tags>
    </apparel>
  </ThingDef>
