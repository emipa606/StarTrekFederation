    </recipeMaker>
    <weaponTags>
      <li>StarfleetT3</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PhaserHand</defaultProjectile>
