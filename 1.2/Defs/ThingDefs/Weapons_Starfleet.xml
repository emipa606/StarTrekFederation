  <ThingDef ParentName="BaseStarfleetGun">
    <defName>HandPhaser</defName>
    <label>Hand Phaser Type 2</label>
    <description>A type 2 style hand phaser, commonly deployed to personnell on starships or on the ground. Powerful. Phase blasts often result in deep, difficult to treat burns.</description>
    <graphicData>
      <texPath>Things/Federation/Weapons/Phaser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>26000</WorkToMake>
      <Mass>1.4</Mass>
      <MarketValue>500</MarketValue>
      <AccuracyTouch>0.35</AccuracyTouch>
      <AccuracyShort>0.9</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
