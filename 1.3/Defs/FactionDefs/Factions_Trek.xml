<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>Federation</defName>
    <label>Federation Outpost</label>
    <description>A United Federation of Planets outpost. Many of these outposts are closer to a colony than any sort of military encampment - Research stations, refueling depots, and small colonies makeup the bulk of the outposts. Often manned by Survey or Colonization detachments from Starfleet.</description>
    <pawnsPlural>Starfleet</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>.2</settlementGenerationWeight>
    <canSiege>true</canSiege>
    <factionIconPath>Things/Federation/Items/Home</factionIconPath>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Captain</leaderTitle>
    <caravanTraderKinds>
      <li>Caravan_Federation_BulkGoods</li>
      <li>Caravan_Federation_CombatSupplier</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Federation_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>FactionBase_Federation_Standard</li>
    </baseTraderKinds>
    <factionNameMaker>NamerFactionFederation</factionNameMaker>
    <settlementNameMaker>NamerSettlementFederation</settlementNameMaker>
    <fixedLeaderKinds>
      <li>StarfleetCommand</li>
    </fixedLeaderKinds>
    <techLevel>Spacer</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
      </li>
    </backstoryFilters>
    <allowedCultures>
      <li>Starfleet</li>
    </allowedCultures>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <StarfleetCommand>5</StarfleetCommand>
          <StarfleetTactical>50</StarfleetTactical>
          <StarfleetTacticalAndorian>30</StarfleetTacticalAndorian>
          <StarfleetOperations>50</StarfleetOperations>
          <StarfleetOperationsVulcan>10</StarfleetOperationsVulcan>
          <StarfleetOperationsAndorian>10</StarfleetOperationsAndorian>
          <StarfleetScience>10</StarfleetScience>
          <StarfleetScienceVulcan>10</StarfleetScienceVulcan>
          <StarfleetScienceAndorian>10</StarfleetScienceAndorian>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <StarfleetTactical>50</StarfleetTactical>
          <StarfleetTacticalAndorian>30</StarfleetTacticalAndorian>
          <StarfleetOperations>50</StarfleetOperations>
          <StarfleetScience>10</StarfleetScience>
          <StarfleetScienceVulcan>10</StarfleetScienceVulcan>
          <StarfleetScienceAndorian>10</StarfleetScienceAndorian>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Town_Trader>1</Town_Trader>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
          <Dromedary>1</Dromedary>
        </carriers>
        <guards>
          <StarfleetTactical>50</StarfleetTactical>
          <StarfleetTacticalAndorian>50</StarfleetTacticalAndorian>
          <StarfleetOperations>50</StarfleetOperations>
          <StarfleetScience>20</StarfleetScience>
          <StarfleetScienceVulcan>20</StarfleetScienceVulcan>
          <StarfleetScienceAndorian>10</StarfleetScienceAndorian>
          <StarfleetCommand>1</StarfleetCommand>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <StarfleetCommand>5</StarfleetCommand>
          <StarfleetTactical>30</StarfleetTactical>
          <StarfleetTacticalAndorian>20</StarfleetTacticalAndorian>
          <StarfleetOperations>50</StarfleetOperations>
          <StarfleetOperationsVulcan>15</StarfleetOperationsVulcan>
          <StarfleetOperationsAndorian>15</StarfleetOperationsAndorian>
          <StarfleetScience>5</StarfleetScience>
          <StarfleetScienceVulcan>5</StarfleetScienceVulcan>
          <StarfleetScienceAndorian>5</StarfleetScienceAndorian>
        </options>
      </li>
    </pawnGroupMakers>
    <allowedArrivalTemperatureRange>
      <min>-5</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <settlementTexturePath>Things/Federation/Items/Home</settlementTexturePath>
  </FactionDef>
</Defs>